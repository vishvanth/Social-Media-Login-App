<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFE6">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/logo_small"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/vish"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="SocialMedia Integration"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24sp"
        android:visibility="invisible"
        app:fontFamily="@font/quicksand_light"></TextView>

    <TextView
        android:id="@+id/app_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/vish"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="Task #5"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="34sp"
        android:visibility="invisible"
        app:fontFamily="@font/quicksand_light"></TextView>

    <LinearLayout
        android:id="@+id/vish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp">

        <TextView
            android:id="@+id/designed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By  "
            android:textColor="#4267B2"
            android:textSize="15sp"
            android:textStyle="italic"
            android:visibility="invisible"
            app:fontFamily="@font/quicksand_light"></TextView>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vishvanth S"
            android:textColor="#4267B2"
            android:textSize="20sp"
            android:textStyle="italic"
            android:visibility="invisible"
            app:fontFamily="@font/quicksand_light"></TextView>
    </LinearLayout>

</RelativeLayout>